{
  "name": "sda-chms",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "dotenv": "^17.2.2",
      "zod": "^4.1.13",
      "typescript": "^5",
      "@types/bun": "^1.3.4",
      "drizzle-orm": "^0.45.1",
      "hono": "^4.11.3",
      "@faker-js/faker": "^9.9.0"
    }
  },
  "type": "module",
  "scripts": {
    "check": "biome check --write .",
    "db:start": "docker compose up -d",
    "db:stop": "docker compose down",
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "db:push": "turbo -F @sda-chms/db db:push",
    "db:studio": "turbo -F @sda-chms/db db:studio",
    "db:generate": "turbo -F @sda-chms/db db:generate",
    "db:migrate": "turbo -F @sda-chms/db db:migrate"
  },
  "dependencies": {
    "dotenv": "catalog:",
    "zod": "catalog:",
    "@sda-chms/env": "workspace:*"
  },
  "devDependencies": {
    "turbo": "^2.6.3",
    "@biomejs/biome": "2.3.10",
    "ultracite": "6.5.0",
    "typescript": "catalog:",
    "@types/bun": "catalog:",
    "@sda-chms/config": "workspace:*"
  },
  "packageManager": "bun@1.3.0"
}
